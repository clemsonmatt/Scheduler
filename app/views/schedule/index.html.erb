<% content_for :sub_nav do %>
    <div class="pull-right">
        <div class="pull-right">
            <button class="btn-round btn-round-success btn-round-md">
                <%= material_icon.publish.md_18 %>
            </button>
        </div>
        <div class="pull-right" style="margin-right: 35px;">
            <button class="btn-round btn-round-default btn-round-md">
                <%= material_icon.print.md_18 %>
            </button>
        </div>
        <div class="pull-right" style="margin-right: 35px;">
            <div class="btn-group" style="margin-top: -6px;">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span style="position: relative; top: 4px;">
                        <%= material_icon.store.md_18 %>
                    </span>
                    Seneca
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li><a href="#">Clemson</a></li>
                    <li class="disabled"><a href="#">Seneca (viewing)</a></li>
                </ul>
            </div>
            <button class="btn-round btn-round-default btn-round-md">
                <%= material_icon.settings.md_18 %>
            </button>
        </div>
    </div>

    <button class="btn-round btn-round-default btn-round-md">
        <%= material_icon.chevron_left.md_18 %>
    </button>
    <span style="margin: 0px 15px;">
        <%= @weekStart.strftime("%B %d") %> &mdash; <%= @weekEnd.strftime("%B %d") %>
    </span>
    <button class="btn-round btn-round-default btn-round-md">
        <%= material_icon.chevron_right.md_18 %>
    </button>

    <button class="btn-round btn-round-default btn-round-md" style="margin-left: 35px;">
        <%= material_icon.today.md_18 %>
    </button>
    <button class="btn-round btn-round-default btn-round-md">
        <%= material_icon.view_day.md_18 %>
    </button>
    <button class="btn-round btn-round-default btn-round-md">
        <%= material_icon.view_week.md_18 %>
    </button>
<% end %>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <th>Team member</th>
        <% for d in 0..5 do %>
            <th style="width: 14%;"><%= Date.today.beginning_of_week.advance(days: d).strftime("%a, %b %d") %></th>
        <% end %>
    </thead>
    <% @people.each do |person| %>
        <tr>
            <th>
                <%= link_to manage_person_profile_path(person.id) do %>
                    <%= person %>
                <% end %>
            </th>
            <% for d in 0..5 %>
                <th></th>
            <% end %>
        </tr>
    <% end %>
</table>
