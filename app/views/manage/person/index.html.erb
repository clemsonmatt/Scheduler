<% content_for :sub_nav do %>
    <%= link_to new_manage_person_profile_path, class: 'btn-round btn-round-success btn-round-md pull-right' do %>
        <%= material_icon.add.md_18 %>
    <% end %>
    People
<% end %>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <th class="col-md-3">First Name</th>
        <th class="col-md-3">Last Name</th>
        <th class="col-md-3">Email</th>
        <th class="col-md-3">Phone</th>
        <th></th>
    </thead>
    <% @people.each do |person| %>
        <tr>
            <td><%= person.first_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.email %></td>
            <td><%= person.phone %></td>
            <td>
                <%= link_to manage_person_profile_path(person.id), class: 'btn btn-primary btn-xs' do %>
                    <%= material_icon.assignment_ind.md_18 %>
                <% end %>
            </td>
        </tr>
    <% end %>

    <% if @people.length == 0 %>
        <tr>
            <td colspan="4" class="text-muted">None</td>
        </tr>
    <% end %>
</table>
